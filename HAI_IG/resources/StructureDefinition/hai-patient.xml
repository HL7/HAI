        value="SHALL contain exactly one [1..1] birthDate (CONF:3347-35)." />
      <min
        value="1" />
      <max
        value="1" />
    </element>
    <element
      id="deceased[x]">
      <path
        value="Patient.deceased[x]" />
      <slicing>
        <discriminator>
          <type
            value="value" />
          <path
            value="@type" />
        </discriminator>
        <rules
          value="open" />
      </slicing>
      <short
        value="deceased[x]" />
      <definition
        value="SHOULD contain zero or one [0..1] deceased[x], where deceased[x] is (CONF:3347-36)" />
      <min
        value="0" />
      <max
        value="1" />
    </element>
    <element
      id="deceased[x].deceasedBoolean">
      <path
        value="Patient.deceasedBoolean" />
      <short
        value="deceasedBoolean" />
      <definition
        value="deceasedBoolean (CONF:3347-142)" />
    </element>
  </differential>
