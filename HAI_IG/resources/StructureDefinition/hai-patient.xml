  <differential>
    <element
      id="Patient">
      <path
        value="Patient" />
    </element>
    <element
      id="name">
      <path
        value="Patient.name" />
      <short
        value="name" />
      <definition
        value="SHALL contain exactly one [1..1] name (CONF:3347-33)." />
      <min
        value="1" />
      <max
        value="1" />
    </element>
    <element
      id="birthDate">
      <path
        value="Patient.birthDate" />
      <short
        value="birthDate" />
