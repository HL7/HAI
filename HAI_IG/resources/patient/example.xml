<Patient
    xmlns="http://hl7.org/fhir">
    <id value="example"/>
    <!--    MRN   -->
    <identifier>
        <!-- <use value="usual"/>-->
        <type>
            <coding>
                <system value="http://hl7.org/fhir/v2/0203"/>
                <code value="MR"/>
            </coding>
        </type>
        <system value="http://hl7.org/fhir/StructureDefinition/daf-patient"/>
        <value value="12345"/>
        <period>
            <start value="2016-01-08"/>
        </period>
    </identifier>
    <active value="true"/>
    <name>
        <use value="official"/>
        <family value="Jones"/>
        <given value="Henry"/>
    </name>
    <telecom>
        <system value="phone"/>
        <value value="(360) 555 1212"/>
        <use value="home"/>
    </telecom>
    <telecom>
        <system value="phone"/>
        <value value="(360) 444 1212"/>
        <use value="work"/>
    </telecom>
    <!--    use FHIR code system for male / female    -->
    <gender value="male"/>
    <birthDate value="1985-08-25"></birthDate>
    <deceasedBoolean value="false"/>
    <address>
        <!--<use value="home"/>-->
        <line value="534 Anywhere St"/>
        <city value="Tomorrowland"/>
        <!-- patient.address.city, state, postal code and country are required in FHIR DSTU2 (1...1), but all SHOULD constraints in Trifolia http://hl7.org/fhir/StructureDefinition/daf-patient - is this correct?    -->
        <state value="WA"/>
        <postalCode value="98001"/>
        <country value="US"/>
    </address>
    <maritalStatus>
        <coding>
            <system value="http://hl7.org/fhir/v3/MaritalStatus"/>
            <code value="M"/>
            <display value="Married"/>
        </coding>
    </maritalStatus>
    <multipleBirthBoolean value="true"/>
    <contact>
        <relationship>
            <coding>
                <system value="http://hl7.org/fhir/patient-contact-relationship"/>
                <code value="family"/>
            </coding>
        </relationship>
        <name>
            <family value="Phire"/>
            <given value="De-Estu-Too"/>
        </name>
        <telecom>
            <system value="phone"/>
            <value value="(360) 666-1212"/>
        </telecom>
        <address>
            <!--<use value="home"/>-->
            <line value="534 Anywhere St"/>
            <city value="Tomorrowland"/>
            <state value="WA"/>
            <postalCode value="98001"/>
            <country value="US"/>
        </address>
        <!--<gender value="female"/>-->
    </contact>
</Patient>