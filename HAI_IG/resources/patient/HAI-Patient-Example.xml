<Patient
    xmlns="http://hl7.org/fhir">
    <id value="HAI-Patient-Example"/>
    <meta>
        <profile value="http://hl7.org/fhir/us/hai/StructureDefinition/hai-patient"/>
    </meta>
    <identifier>
        <use value="usual"/>
        <type>
            <coding>
                <system value="http://hl7.org/fhir/v2/0203"/>
                <code value="MR"/>
                <display value="Medical Record Number"/>
            </coding>
            <text value="Medical Record Number"/>
        </type>
        <system value="http://hospital.smarthealthit.org"/>
        <value value="1032702"/>
    </identifier>
    <active value="true"/>
    <name>
        <use value="official"/>
        <family value="Jones"/>
        <given value="Henry"/>
    </name>
    <telecom>
        <system value="phone"/>
        <value value="(360) 555 1212"/>
        <use value="home"/>
    </telecom>
    <telecom>
        <system value="phone"/>
        <value value="(360) 444 1212"/>
        <use value="work"/>
    </telecom>
    <!-- use FHIR code system for male / female -->
    <gender value="male"/>
    <birthDate value="1985-08-25"/>
    <deceasedBoolean value="false"/>
    <address>
        <line value="49 Meadow St"/>
        <city value="Mounds"/>
        <state value="OK"/>
        <postalCode value="74047"/>
        <country value="US"/>
    </address>
    <maritalStatus>
        <coding>
            <system value="http://hl7.org/fhir/v3/MaritalStatus"/>
            <code value="M"/>
            <display value="Married"/>
        </coding>
    </maritalStatus>
    <contact>
        <relationship>
            <coding>
                <system value="http://hl7.org/fhir/patient-contact-relationship"/>
                <code value="family"/>
            </coding>
        </relationship>
        <name>
            <family value="Seven"/>
            <given value="Francine"/>
        </name>
        <telecom>
            <system value="phone"/>
            <value value="(360) 666-1212"/>
        </telecom>
        <address>
            <line value="49 Meadow St"/>
            <city value="Mounds"/>
            <state value="OK"/>
            <postalCode value="74047"/>
            <country value="US"/>
        </address>
    </contact>
</Patient>